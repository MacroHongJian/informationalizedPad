<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.zyzywd">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".zyzywd.ExamActivity"
            android:label="@string/title_activity_exam"
            android:theme="@style/AppTheme.NoActionBar">


        </activity>
        <activity
            android:name=".zyzywd.QuestionChooseActivity"
            android:label="@string/title_activity_exam"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".zyzywd.PlaneNumberChoose"
            android:label="@string/title_activity_plane_number_choose"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".zyzywd.AppraiserChooseActivity"
            android:label="@string/title_activity_appraiser_choose"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:theme="@style/LoginTheme">

        </activity>

        <activity android:name=".opratingcard.OperatingCard"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".opratingcard.AlbumActivity"
            android:theme="@style/AppTheme"
            android:configChanges="orientation|screenSize"/>

        <activity android:name=".opratingcard.GalleryPreview"
            android:theme="@style/AppTheme"
            android:configChanges="orientation|screenSize"/>

    </application>

</manifest>